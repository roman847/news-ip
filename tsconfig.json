{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "./dist/",
        // "noImplicitAny": true,
        "alwaysStrict": true,
        "strict": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*"]
}
